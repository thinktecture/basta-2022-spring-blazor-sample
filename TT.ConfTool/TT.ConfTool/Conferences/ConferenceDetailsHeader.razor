{
    case ConferenceDetailsModes.Show:
        <MudText Typo="Typo.h4" Class="py-8" Color="Color.Secondary">Conference Details</MudText>
        break;

    case ConferenceDetailsModes.New:
        <MudText Typo="Typo.h4" Class="py-8" Color="Color.Secondary">New Conference</MudText>
        break;

    case ConferenceDetailsModes.Edit:
        <MudText Typo="Typo.h4" Class="py-8" Color="Color.Secondary">Edit Conference</MudText>
        break;
}
