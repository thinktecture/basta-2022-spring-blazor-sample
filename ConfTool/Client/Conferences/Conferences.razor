@page "/conferences"
@attribute [Authorize]

@if (_conferences == null)
{
    <p>Fetching conferences found</p>
}
else
{
    <MudButton OnClick="AddConference">Add Conference</MudButton>
    <MudSimpleTable>
        <thead>
            <tr>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            <Virtualize Items="_conferences" Context="conf">
                <tr @onclick="() => LoadDetails(conf.ID)" style="@(_newItemId == conf.ID ? "background-color: #3d6fb4; color: white;" : "")">
                    <td>@conf.Title</td>
                </tr>
            </Virtualize>
        </tbody>
    </MudSimpleTable>
}
